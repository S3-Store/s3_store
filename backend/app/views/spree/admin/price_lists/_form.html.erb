<div data-hook="admin_price_list_form_fields" class="row">
  <div data-hook="admin_price_list_form_name_field" class="col-5">
    <%= f.field_container :name do %>
      <%= f.label :name, class: 'required' %>
      <%= f.text_field :name, class: 'fullwidth' %>
      <%= error_message_on :price_list, :name %>
    <% end %>
  </div>

  <div data-hook="admin_price_list_form_price_field" class="col-5">
    <%= f.field_container :price_ids do %>
      <%= f.label :price_ids, plural_resource_name(Spree::Price) %><br>
      <%= f.collection_select :price_ids, @prices, :last, :first, {}, { multiple: true, class: "select2 fullwidth" } %>
    <% end %>
  </div>
</div>
